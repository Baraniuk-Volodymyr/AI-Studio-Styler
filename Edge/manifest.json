{
  "manifest_version": 3,
  "name": "AI Studio Styler for Edge",
  "version": "1.2",
  "description": "Adds a button to toggle and customize RTL/LTR styles in Google AI Studio.",
  "permissions": ["storage", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://aistudio.google.com/prompts/*",
      "https://aistudio.google.com/app/prompts/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "browser_specific_settings": {
    "edge": {
      "browser_action_next_to_address_bar": true
    }
  }
}